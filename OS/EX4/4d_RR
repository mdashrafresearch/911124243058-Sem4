#include<stdio.h>

int main() {
    int n, quantum;
    int burst[20], rem_bt[20], wait[20] = {0}, turn[20];
    int time = 0, done;
    float total_wt = 0, total_tat = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter burst time:\n");
    for(int i = 0; i < n; i++) {
        printf("P%d: ", i+1);
        scanf("%d", &burst[i]);
        rem_bt[i] = burst[i];
    }

    printf("Enter time quantum: ");
    scanf("%d", &quantum);

    do {
        done = 1;
        for(int i = 0; i < n; i++) {
            if(rem_bt[i] > 0) {
                done = 0;
                if(rem_bt[i] > quantum) {
                    time += quantum;
                    rem_bt[i] -= quantum;
                } else {
                    time += rem_bt[i];
                    wait[i] = time - burst[i];
                    rem_bt[i] = 0;
                }
            }
        }
    } while(!done);

    for(int i = 0; i < n; i++)
        turn[i] = burst[i] + wait[i];

    printf("\nProcess\tBT\tWT\tTAT\n");
    for(int i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\n",
               i+1, burst[i], wait[i], turn[i]);
        total_wt += wait[i];
        total_tat += turn[i];
    }

    printf("\nAverage Waiting Time = %.2f", total_wt/n);
    printf("\nAverage Turnaround Time = %.2f\n", total_tat/n);

    return 0;
}
